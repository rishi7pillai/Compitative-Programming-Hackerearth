#include <iostream>
#include <bits/stdc++.h>
#include <vector>
using namespace std;

int main()
{
int n;
cin>>n;
vector<string> v;
string s;int a,b;
while(n--){
cin>>s>>a>>b;
sort(s.begin()+a,s.begin()+a+b,greater<char>());
v.push_back(s);
}
for(int i=0;i<v.size();i++) cout<<v[i]<<endl;
}



=======================================================
#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;
int main()
{
ios::sync_with_stdio(false);
ll n;
cin >> n;
while(n--)
{
string x;
ll l,r;
cin >> x >> l >> r;
sort(x.begin()+l,x.begin()+r+1,greater<ll>());
cout << x << "\n";
}
return 0;
}
