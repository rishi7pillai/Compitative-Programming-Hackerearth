#include<bits/stdc++.h>
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define endl "\n";
#define ll long long int
using namespace std;
int main()
{
    fast;
    ll n;
    cin>>n;
    while(n--)
    {
        ll c=0,i;
        ll k;
        cin>>k;
        string s;cin>>s;
        for(i=0;i<k-1;i++)
        {
            if((s[i]=='b' or s[i]=='c' or s[i]=='d' or s[i]== 'f' or s[i]=='g' or
            s[i]=='h' or s[i]=='j' or s[i]=='k' or s[i]== 'l' or s[i]=='m' or
            s[i]=='n' or s[i]=='p' or s[i]=='q' or s[i]== 'r' or s[i]=='s' or s[i]=='t' or s[i]=='v' or s[i]=='w' or s[i]== 'x' or s[i]=='y' or s[i]=='z') and (s[i+1]=='a' or s[i+1]=='e' or s[i+1]=='i' or s[i+1]== 'o' or s[i+1]=='u'))
              c++;
        }
        cout<<c<<endl;
    }
}
