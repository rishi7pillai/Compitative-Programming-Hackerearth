#include<bits/stdc++.h>
#define ll long long int
#define endl "\n"
#define fast ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
using namespace std;
int main()
{
    fast;
    ll t;
    cin>>t;
    while(t--)
    {
        ll n;
        cin>>n;
        ll m=((n*n)+n+2)/2;
        cout<<m<<endl;
           
    }
}
