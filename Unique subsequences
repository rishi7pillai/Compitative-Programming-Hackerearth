#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t,i;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        string s;
        cin>>s;
        vector<char> v;
        for(i=0;i<n;i++)
        {
            v.push_back(s[i]);
        }
        int k=0;
        for(i=0;i<v.size()-1;i++)
        {
            if(v[i]!=v[i+1])
               k++;
        }
        cout<<k+1<<"\n";
    }
}
