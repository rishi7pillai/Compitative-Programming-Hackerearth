t=int(input())
for i in range(t):
    c=0
    n=int(input())
    s=input()
    for i in range(n-1):
        if((s[i]!='a' and s[i]!='e' and s[i]!='i' and s[i]!='o'and s[i]!='u') and (s[i+1]=='a' or s[i+1]=='e' or s[i+1]=='i' or s[i+1]=='o'or s[i+1]=='u')):
            c+=1
    print(c)
            
